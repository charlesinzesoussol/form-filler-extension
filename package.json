{
  "name": "form-auto-fill-extension",
  "version": "1.0.0",
  "description": "Chrome extension that automatically fills all form fields on any webpage with a single button click",
  "main": "manifest.json",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "build": "echo 'Building extension...' && npm run lint && npm run test",
    "dev": "web-ext run --source-dir=. --start-url=tests/fixtures/test-forms.html",
    "package": "web-ext build --source-dir=. --artifacts-dir=dist/",
    "validate": "npm run lint && npm run test && echo 'Validation complete'",
    "format": "prettier --write 'src/**/*.{js,css,html}' 'tests/**/*.js'"
  },
  "keywords": [
    "chrome-extension",
    "form-filling",
    "automation",
    "productivity",
    "manifest-v3"
  ],
  "author": "Form Auto-Fill Team",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.5",
    "eslint": "^8.49.0",
    "eslint-config-standard": "^17.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "web-ext": "^7.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/constants.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true,
      "jest": true
    },
    "extends": [
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "globals": {
      "chrome": "readonly",
      "EXTENSION_CONSTANTS": "readonly",
      "FormDetector": "readonly",
      "FormFiller": "readonly",
      "FieldMapper": "readonly",
      "SecurityUtils": "readonly",
      "StorageManager": "readonly",
      "DataTemplateManager": "readonly",
      "FormAutoFillContentScript": "readonly"
    },
    "rules": {
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "printWidth": 100
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/example/form-auto-fill-extension.git"
  },
  "bugs": {
    "url": "https://github.com/example/form-auto-fill-extension/issues"
  },
  "homepage": "https://github.com/example/form-auto-fill-extension#readme"
}